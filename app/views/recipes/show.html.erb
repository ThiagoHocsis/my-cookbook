<h1><%=@recipe.title%></h1>
<h3>Detalhes</h3>
<p><%=@recipe.recipe_type.name%></p>
<p><%=@recipe.cuisine.name%></p>
<p><%=@recipe.difficulty%></p>
<p><%=@recipe.cook_time%> minutos</p>
<h3>Ingredientes</h3>
<p><%=@recipe.ingredients%></p>
<h3>Como Preparar</h3>
<p><%=@recipe.method%></p>

<% if user_signed_in?%>
  <% if current_user.favorite?(@recipe)%>
    <%=link_to 'Remover receita como favorita', unfavorite_recipe_path, method: :delete%>
  <% else %>
    <%=link_to 'Adicionar receita como favorita', favorite_recipe_path, method: :post %>
  <% end %>
<% end %>
<%=link_to('Voltar', root_path)%>
<%=link_to 'Editar', edit_recipe_path(@recipe)%>
