<h1>Nova Receita</h1>
<% if flash[:error] %>
  <div class="error">
    <%= flash[:error] %>
    <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
   <ul>
  </div>
<% end %>

<%=form_for(@recipe) do |f| %>
  <div>
    <%=f.label :title %>
    <%=f.text_field :title %>
  </div>

  <div>
    <%= f.label :recipe_type_id%>
    <%= f.collection_select :recipe_type_id, @recipe_types, :id, :name  %>
  </div>

  <div>

    <%= f.label :cuisine_id %>
<%= f.collection_select :cuisine_id, @cuisines, :id, :name  %>
  </div>

  <div>
    <%=f.label :difficulty %>
    <%=f.text_field :difficulty %>
  </div>

  <div>
    <%=f.label :cook_time %>
    <%=f.text_field :cook_time %>
  </div>

  <div>
    <%=f.label :ingredients %>
    <%=f.text_field :ingredients %>
  </div>

  <div>
    <%=f.label :method %>
    <%=f.text_field :method %>
  </div>

  <%= f.submit('Enviar')%>
<%end%>
