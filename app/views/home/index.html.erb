<h1> CookBook </h1>

<p><%= I18n.translate('site_description') %></p>
<% if user_signed_in? %>
  <%="Bem-vindo #{current_user.email}"%>
  <%= link_to 'Sair', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Entrar', new_user_session_path %>
<%end%>
<%= form_tag("recipes/search", method: "get") do %>
  <%= text_field_tag(:q, nil, placeholder: "Busca") %>
  <%= submit_tag("Buscar") %>
<% end %>



<% @cuisines.each do |cuisine| %>
<h1><%= link_to(cuisine.name, cuisine_path(cuisine.id)) %></h1>
<% end %>

<% @recipe_types.each do |recipe_type| %>
<h1><%= link_to(recipe_type.name, recipe_type_path(recipe_type.id)) %></h1>
<% end %>


<% @recipes.each do |recipe| %>
      <h1><%= link_to recipe.title, recipe %></h1>
      <ul>
        <li><%= recipe.recipe_type.name %></li>
        <li><%= recipe.cuisine.name %></li>
        <li><%= recipe.difficulty %></li>
        <li><%= recipe.cook_time %> minutos</li>
      </ul>
<% end %>

<%=link_to('Enviar uma receita', new_recipe_path)%>
